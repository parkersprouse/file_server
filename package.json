{
  "name": "web_file_browser",
  "version": "1.0.0",
  "author": "Parker Sprouse <parker@parkersprouse.me> (https://parkersprouse.me)",
  "description": "A basic file browser for serving a local directory through a minimalist web interface",
  "homepage": "https://github.com/parkersprouse/file_server",
  "repository": "https://github.com/parkersprouse/file_server",
  "license": "Unlicense",
  "private": true,
  "exports": null,
  "type": "module",
  "engines": {
    "node": "^20",
    "pnpm": "^9"
  },
  "scripts": {
    "lint": "pnpm run lint:css && pnpm run lint:js",
    "lint:css": "stylelint -f verbose \"**/*.{css,html}\"",
    "lint:css:fix": "stylelint -f verbose --fix \"**/*.{css,html}\"",
    "lint:js": "eslint .",
    "lint:js:fix": "eslint . --fix",
    "build": "dotenvx run -- node ./bin/build.js",
    "server": "dotenvx run -- pnpm run build && node server/index.js",
    "start": "dotenvx run -- pnpm run server"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.34.0",
    "@ffprobe-installer/ffprobe": "^2.1.2",
    "@fontsource-variable/inter": "^5.1.1",
    "@hapi/hapi": "^21.3.12",
    "@hapi/inert": "^7.1.0",
    "@hapi/log": "^2.0.1",
    "@hapi/vision": "^7.0.3",
    "@picturae/mmmagic": "^0.5.5",
    "dayjs": "^1.11.13",
    "execa": "^9.5.2",
    "fast-xml-parser": "^4.5.1",
    "handlebars": "^4.7.8",
    "hint.css": "^3.0.0",
    "lodash-es": "^4.17.21",
    "luxon": "^3.5.0",
    "qs": "^6.14.0",
    "sanitize.css": "^13.0.0"
  },
  "devDependencies": {
    "@eslint-community/eslint-plugin-eslint-comments": "^4.4.1",
    "@stylistic/eslint-plugin": "^3.0.1",
    "@stylistic/stylelint-plugin": "^3.1.1",
    "autoprefixer": "^10.4.20",
    "esbuild": "0.25.0",
    "eslint": "^9.19.0",
    "eslint-import-resolver-custom-alias": "^1.3.2",
    "eslint-plugin-import-x": "^4.6.1",
    "eslint-plugin-n": "^17.15.1",
    "eslint-plugin-unicorn": "^56.0.1",
    "globals": "^15.14.0",
    "postcss": "^8.5.1",
    "postcss-cli": "^11.0.0",
    "postcss-preset-env": "^10.1.3",
    "purgecss": "7.0.2",
    "stylelint": "^16.14.1",
    "stylelint-config-clean-order": "^7.0.0",
    "stylelint-config-standard": "^37.0.0",
    "stylelint-plugin-defensive-css": "^1.0.4",
    "stylelint-use-nesting": "^6.0.0"
  }
}
