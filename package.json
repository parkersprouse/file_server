{
  "name": "web_file_browser",
  "version": "1.0.0",
  "author": "Parker Sprouse <parker@parkersprouse.me> (https://parkersprouse.me)",
  "description": "A basic file browser for serving a local directory through a minimalist web interface",
  "homepage": "https://github.com/parkersprouse/file_server",
  "repository": "https://github.com/parkersprouse/file_server",
  "license": "Unlicense",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^22",
    "pnpm": "^10"
  },
  "scripts": {
    "build": "dotenvx run -- node ./bin/build.js",
    "clean": "rimraf -I -g \"**/node_modules\"",
    "clean:dist": "rimraf -I -g \"server/*.*\"",
    "clean:hard": "rimraf -I -g \"**/pnpm-lock.yaml\" && pnpm run clean",
    "lint": "pnpm run lint:css && pnpm run lint:js",
    "lint:css": "stylelint -f verbose \"**/*.{css,html}\"",
    "lint:css:fix": "stylelint -f verbose --fix \"**/*.{css,html}\"",
    "lint:js": "eslint .",
    "lint:js:fix": "eslint . --fix",
    "prebuild": "pnpm run clean:dist",
    "preclean": "pnpm run clean:dist",
    "server": "dotenvx run -- pnpm run build && node server/index.js",
    "start": "dotenvx run -- pnpm run server"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.44.1",
    "@ffprobe-installer/ffprobe": "^2.1.2",
    "@fontsource-variable/inter": "^5.2.5",
    "@hapi/hapi": "^21.4.0",
    "@hapi/inert": "^7.1.0",
    "@hapi/log": "^2.0.1",
    "@hapi/vision": "^7.0.3",
    "@picturae/mmmagic": "^0.5.5",
    "dayjs": "^1.11.13",
    "execa": "^9.6.0",
    "fast-xml-parser": "^5.2.3",
    "handlebars": "^4.7.8",
    "hint.css": "^3.0.0",
    "lodash-es": "^4.17.21",
    "luxon": "^3.6.1",
    "qs": "^6.14.0",
    "sanitize.css": "^13.0.0"
  },
  "devDependencies": {
    "@eslint-community/eslint-plugin-eslint-comments": "^4.5.0",
    "@eslint/js": "^9.27.0",
    "@stylistic/eslint-plugin": "^4.4.0",
    "@stylistic/stylelint-plugin": "^3.1.2",
    "autoprefixer": "^10.4.21",
    "esbuild": "0.25.5",
    "eslint": "^9.27.0",
    "eslint-import-resolver-custom-alias": "^1.3.2",
    "eslint-plugin-import-x": "^4.13.3",
    "eslint-plugin-n": "^17.18.0",
    "eslint-plugin-unicorn": "^59.0.1",
    "globals": "^16.2.0",
    "postcss": "^8.5.3",
    "postcss-cli": "^11.0.1",
    "postcss-preset-env": "^10.2.0",
    "purgecss": "7.0.2",
    "rimraf": "^6.0.1",
    "stylelint": "^16.19.1",
    "stylelint-config-clean-order": "^7.0.0",
    "stylelint-config-standard": "^38.0.0",
    "stylelint-plugin-defensive-css": "^1.0.4",
    "stylelint-use-nesting": "^6.0.0"
  }
}
