{
  "name": "web_file_browser",
  "version": "1.0.0",
  "author": "Parker Sprouse <parker@parkersprouse.me> (https://parkersprouse.me)",
  "description": "A basic file browser for serving a local directory through a minimalist web interface",
  "homepage": "https://github.com/parkersprouse/file_server",
  "repository": "https://github.com/parkersprouse/file_server",
  "license": "Unlicense",
  "private": true,
  "exports": null,
  "type": "module",
  "engines": {
    "node": "^20",
    "pnpm": "^9"
  },
  "scripts": {
    "lint": "pnpm run lint:css && pnpm run lint:js",
    "lint:css": "stylelint \"**/*.{css,html}\"",
    "lint:css:fix": "stylelint --fix \"**/*.{css,html}\"",
    "lint:js": "eslint .",
    "lint:js:fix": "eslint . --fix",
    "build": "node ./bin/build.js",
    "server": "pnpm run build && node server/index.js",
    "start": "pnpm run server"
  },
  "dependencies": {
    "@ffprobe-installer/ffprobe": "^2.1.2",
    "@fontsource-variable/inter": "^5.0.19",
    "@hapi/hapi": "^21.3.10",
    "@hapi/inert": "^7.1.0",
    "@hapi/log": "^2.0.1",
    "@hapi/vision": "^7.0.3",
    "@picturae/mmmagic": "^0.5.5",
    "dotenv": "^16.4.5",
    "execa": "^9.3.0",
    "handlebars": "^4.7.8",
    "hint.css": "^3.0.0",
    "lodash-es": "^4.17.21",
    "luxon": "^3.4.4",
    "qs": "^6.12.3",
    "sanitize.css": "^13.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.1.0",
    "@stylistic/eslint-plugin": "^2.3.0",
    "@stylistic/stylelint-plugin": "^2.1.2",
    "autoprefixer": "^10.4.19",
    "esbuild": "0.23.0",
    "eslint": "^8.57.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-github": "^5.0.1",
    "eslint-plugin-import": "^2.29.1",
    "postcss": "^8.4.43",
    "postcss-cli": "^11.0.0",
    "postcss-preset-env": "^9.6.0",
    "purgecss": "6.0.0",
    "stylelint": "^16.7.0",
    "stylelint-config-clean-order": "^6.1.0",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-plugin-defensive-css": "^1.0.4",
    "stylelint-use-nesting": "^5.1.1"
  }
}
